<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".MainActivity">

    <EditText
        style="@style/style2"
        android:text="Please key in numbers" />

    <EditText
        android:id="@+id/edittext_number1"
        style="@style/style3"
        android:hint="Number1(0)" />

    <EditText
        android:id="@+id/edittext_number2"
        style="@style/style3"
        android:hint="Number2(0)"/>

    <EditText
        style="@style/style4"
        android:id="@+id/edittext_result"
        android:hint="Result" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_add"
            style="@style/style5"
            android:text="ADD (+)" />
        <Button
            android:id="@+id/button_subs"
            style="@style/style5"
            android:text="SUBSTRACT (-)" />
        <Button
            android:id="@+id/button_divide"
            style="@style/style5"
            android:text="DIVIDE (/)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_multi"
            style="@style/style5"
            android:text="MULTIPLY (x)" />
        <Button
            android:id="@+id/button_mod"
            style="@style/style5"
            android:text="% (MOD)" />
        <Button
            android:id="@+id/button_n1n2"
            style="@style/style5"
            android:text="N1^N2" />
    </LinearLayout>

</LinearLayout>